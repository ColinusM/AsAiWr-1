#!/bin/bash
# ULTRA-FAST TTS - One command, instant playback, non-blocking
# Usage: ./read implementation-summary.md

if [ $# -eq 0 ]; then
    echo "Usage: ./read filename.md"
    exit 1
fi

# Run TTS completely detached - returns immediately
nohup /Users/colinmignot/miniforge3/bin/python3 "$(dirname "$0")/fast_tts.py" "$1" > /dev/null 2>&1 &
disown

echo "ğŸš€ TTS started for: $(basename "$1")"
echo "ğŸ’¡ Claude Code is ready to use!"